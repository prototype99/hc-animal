<?xml version="1.0" encoding="utf-8" ?>
<Patch>

<Operation Class="PatchOperationFindMod">
        <mods>
            <li>[XND] Nocturnal Animals (Continued)</li>
        </mods>
        <match Class="PatchOperationAddModExtension">
            <xpath>/Defs/ThingDef[defName="HC_Hyena"]</xpath>
