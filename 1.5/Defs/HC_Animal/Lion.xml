<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="AnimalThingBase" ame="BigCatThingBase">
    <defName>HC_Lion</defName>
    <label>lion</label>
    <description>A carnivore at the top of the food chain which lives in a herd.</description>
    <statBases>
      <MoveSpeed>5.3</MoveSpeed>
      <MarketValue>600</MarketValue>
      <ComfyTemperatureMin>-8</ComfyTemperatureMin>
	  <ComfyTemperatureMax>50</ComfyTemperatureMax>
    </statBases>
    <tools>
      <li>
        <label>left claw</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>16.8</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>FrontLeftPaw</linkedBodyPartsGroup>
		<surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>14</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>right claw</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>16.8</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>FrontRightPaw</linkedBodyPartsGroup>
		<surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>14</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>23</power>
        <cooldownTime>2.6</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
        <chanceFactor>0.7</chanceFactor>
		<surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>14</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>11</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
    <race>
      <body>QuadrupedAnimalWithPawsAndTail</body>
      <herdAnimal>true</herdAnimal>
      <predator>true</predator>
      <maxPreyBodySize>2.6</maxPreyBodySize>
      <baseBodySize>1.85</baseBodySize>
      <baseHungerRate>0.34</baseHungerRate>
      <baseHealthScale>1.95</baseHealthScale>
      <foodType>CarnivoreAnimal, OvivoreAnimal</foodType>
      <leatherDef>Leather_Panthera</leatherDef>
      <wildness>0.75</wildness>
      <manhunterOnTameFailChance>0.35</manhunterOnTameFailChance>
      <manhunterOnDamageChance>1.00</manhunterOnDamageChance>
      <gestationPeriodDays>22</gestationPeriodDays>
      <lifeExpectancy>12</lifeExpectancy>
	  <trainability>Advanced</trainability>
	  <useMeatFrom>Cougar</useMeatFrom>
	  <wildBiomes>
        <TropicalRainforest>0.1</TropicalRainforest>
		<TropicalSwamp>0</TropicalSwamp>
		<AridShrubland>0.1</AridShrubland>
        <Desert>0.07</Desert>
		<ExtremeDesert>0</ExtremeDesert>
		<TemperateForest>0.1</TemperateForest>
		<TemperateSwamp>0</TemperateSwamp>
		<BorealForest>0</BorealForest>
		<Tundra>0</Tundra>
		<ColdBog>0</ColdBog>
		<IceSheet>0</IceSheet>
		<SeaIce>0</SeaIce>
      </wildBiomes>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.18</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.4</minAge>
          <soundWounded>Pawn_Cougar_Injured</soundWounded>
          <soundDeath>Pawn_Cougar_Death</soundDeath>
          <soundAngry>Pawn_Cougar_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
    </race>
    <tradeTags>
      <li>AnimalUncommon</li>
      <li>AnimalFighter</li>
    </tradeTags>
  </ThingDef>
  
